  <script>
    // Data (text as on your screenshots)
    const ods = [
      {n:1, title:"Erradica√ß√£o da Pobreza"},
      {n:2, title:"Fome Zero"},
      {n:3, title:"Sa√∫de e Bem-estar"},
      {n:4, title:"Educa√ß√£o de Qualidade"},
      {n:5, title:"Igualdade de G√™nero"},
      {n:6, title:"√Ågua e Saneamento"},
      {n:7, title:"Energia Limpa"},
      {n:8, title:"Trabalho Decente"},
      {n:9, title:"Ind√∫stria e Inova√ß√£o"},
      {n:10, title:"Redu√ß√£o das Desigualdades"},
      {n:11, title:"Cidades Sustent√°veis"},
      {n:12, title:"Consumo Respons√°vel"},
      {n:13, title:"A√ß√£o Clim√°tica"},
      {n:14, title:"Vida na √Ågua"},
      {n:15, title:"Vida Terrestre"},
      {n:16, title:"Paz e Justi√ßa"},
      {n:17, title:"Parcerias"}
    ];

    // Insert cards into odsList
    const list = document.getElementById('odsList');
    ods.forEach(item=>{
      const card = document.createElement('article');
      card.className = 'ods-card';
      card.tabIndex = 0;
      card.innerHTML = `<div class="ods-label">ODS ${item.n}</div><div class="ods-sub">${item.title}</div>`;
      list.appendChild(card);
    });

    // Toggle explanation button
    const toggle = document.getElementById('toggleExplain');
    const explainBox = document.getElementById('explainBox');
    toggle.addEventListener('click', ()=>{
      const open = explainBox.style.display !== 'none';
      explainBox.style.display = open ? 'none' : 'block';
      toggle.textContent = open ? 'Mostrar explica√ß√£o' : 'Ocultar explica√ß√£o';
    });

    // Signup button ‚Äî mailto fallback
    document.getElementById('signupBtn').addEventListener('click', ()=>{
      location.href = 'mailto:contato@exemplo.com?subject=Inscri√ß√£o%20ODS%20Seguran√ßa%20Digital';
    });

    // Chart.js
    const ctx = document.getElementById('odsChart').getContext('2d');
    const labels = ods.map(o => 'ODS ' + o.n);
    const values = [60,55,70,66,60,62,68,58,66,60,63,57,54,60,58,62,64]; // simulated
    const barColor = 'rgba(130,170,205,0.95)';
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels,
        datasets: [{
          label: 'Progresso (%)',
          data: values,
          backgroundColor: barColor,
          borderRadius: 8,
          barPercentage: 0.85,
          categoryPercentage: 0.9
        }]
      },
      options: {
        maintainAspectRatio:false,
        scales:{
          x:{ ticks:{ color:'rgba(255,255,255,0.9)', font:{size:12}}, grid:{display:false} },
          y:{ beginAtZero:true, max:100, ticks:{ color:'rgba(255,255,255,0.7)', callback: v => v + '%' }, grid:{ color:'rgba(255,255,255,0.04)'} }
        },
        plugins:{
          legend:{display:false},
          tooltip:{callbacks:{ label: ctx => 'Progresso: ' + ctx.parsed.y + '%' }}
        }
      }
    });
  </script>
